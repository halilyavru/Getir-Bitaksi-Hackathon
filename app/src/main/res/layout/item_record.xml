<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_record_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="idas dasdasd"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/tv_record_count"/>


        <TextView
            android:id="@+id/tv_record_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="count"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_record_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="key"/>

    <TextView
        android:id="@+id/tv_record_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="value"/>

    <TextView
        android:id="@+id/tv_record_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="date"/>

</LinearLayout>